{
  "manifest_version": 2,
  "name": "DeepL search engine",
  "description": "Adds a DeepL search engine",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "67.0"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "DeepL",
      "search_url": "https://www.deepl.com/translator#de/en/{searchTerms}",
      "keyword": "translation",
      "favicon_url": "https://www.deepl.com/img/favicon/favicon_96.png",
      "is_default": false,
      "encoding": "UTF-8"
    }
  }
}
